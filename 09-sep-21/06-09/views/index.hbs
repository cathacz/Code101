<h1>{{title}}</h1>
{{#if done}}
<div>
    <h4>Well done!</h4></div>
{{else}}
{{#if errors}}
  <div>
    <ul>
      {{#each errors}}
        {{! errors.map(err => err aka this)}}
        <li>{{this.msg}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}
<form method="POST" action="/submit">
  <label for="email">
    <input
      type="email"
      id="email"
      name="email"
      placeholder="your email, please"
    />
  </label>
  <label for="pass">
    <input
      type="password"
      id="pass"
      name="pass"
      placeholder="Create your password, please"
    />
  </label>
  <label for="passConf">
    <input
      type="password"
      id="passConf"
      name="passConf"
      placeholder="Confirm your password, please"
    />
  </label>

  <label for="submit">
    <input type="submit" id="submit" placeholder="Submit" />
  </label>
</form>